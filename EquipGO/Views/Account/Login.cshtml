@{
    ViewBag.Title = "Iniciar Sesión - EquipGO";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <main>
    <div class="login-container">
        <div class="login-box">
            <div class="brand">
                    <img src="~/img/outsourcingLogo.png" alt="Alternate Text" id="outsourcingLogo"/>
            </div>
            <h2>Iniciar Sesión</h2>
                <form action="@Url.Action("Login", "Account")" method="post" id="formularioLogin">
                <div class="input-group">
                    <label for="username">Usuario</label>
                </div>
                <div class="input-group">
                        <div class="input-wrapper">
                            <input type="text" id="username" name="username" placeholder="Ingrese su usuario" required />
                            <i class="fas fa-user"></i>
                        </div>
                </div>
                <div class="input-group">
                    <label for="password">Contraseña</label>
                </div>
                <div class="input-group">
                        <div class="input-wrapper">
                            <input type="password" id="password" name="password" placeholder="Ingrese su contraseña" required />
                            <i class="fas fa-lock"></i>
                        </div>
                </div>
                <div class="options">
                    <label>
                        <input type="checkbox" name="remember" /> Recordarme
                    </label>
                    <a href="#">¿Olvidó su contraseña?</a>
                </div>
                <button type="submit" class="btn-login">
                    Ingresar <i class="fas fa-arrow-right"></i>
                </button>
            </form>
        </div>
    </div>
    </main>
</body>
</html>