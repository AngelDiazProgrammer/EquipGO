@{
    ViewBag.Title = "Correo Enviado - EquipGO";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <main>
        <div class="login-container">
            <div class="login-box">
                <div class="brand">
                    <img src="~/img/outsourcingLogo.png" alt="Alternate Text" id="outsourcingLogo" />
                </div>
                <h2>Correo Enviado</h2>
                <form action="@Url.Action("Login", "Account")" method="post" id="formularioLogin">
                    <div class="input-group">
                        <label for="correo enviado">Si el correo electronico esta registrado en un tiempo estimado de 2 a 5 minutos recibira un mensaje para realizar el cambio de contraseña de su usuario</label>
                    </div>
                    <button type="submit" class="btn-recuperarContraseña">
                        Volver al inicio de sesion <i class="fas fa-arrow-right"></i>
                    </button>
                </form>
            </div>
        </div>
    </main>
</body>
</html>
