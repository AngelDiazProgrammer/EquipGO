@{
    ViewBag.Title = "Recuperar contraseña - EquipGO";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <main>
        <div class="login-container">
            <div class="login-box">
                <div class="brand">
                    <img src="~/img/outsourcingLogo.png" alt="Alternate Text" id="outsourcingLogo" />
                </div>
                <h2>Recuperar Contraseña</h2>
                <form action="@Url.Action("envioCorreo", "Account")" method="post" id="formularioLogin">
                    <div class="input-group">
                        <label for="correo">Correo</label>
                    </div>
                    <div class="input-group">
                        <div class="input-wrapper">
                            <input type="text" id="email" name="email" placeholder="Ingrese su correo electronico" required />
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                    <button type="submit" class="btn-recuperarContraseña">
                        Enviar <i class="fas fa-arrow-right"></i>
                    </button>
                </form>
            </div>
        </div>
    </main>
</body>
</html>